<body>
    <%- include('partials/header') %>
    

    <div class="container col-md-5" style="margin-top: 50px">
            <div class="card">
                    <div class="card-header">
                        <h5>SIGN IN</h5>
                        <p>Please fill in the fields to sign in.</p>
                    </div>
                    <div class="card-body">
                            <form action="/auth/login" method="POST">
                                    
                                    <div class="form-group">
                                        <label for="SignInEmailAddress">Email address</label>
                                        <input type="email" required="" name="email" class="form-control" id="SignInEmailAddress" aria-describedby="emailHelp" placeholder="Enter email">
                                    </div>
                                    <div class="form-group">
                                        <label for="SignInPassword">Password</label>
                                        <input type="password" required="" name="password" class="form-control" id="SignInPassword" placeholder="Password">
                                    </div>
                                    <button type="submit" class="btn btn-primary" id="SignInButton">Sign In</button>
                                        <!-- <a href="/forgot-password">Forgot Password</a>. -->
                                        <br>
                                    <br>
                                    <br>                 
                                </form>
                    </div>
                  </div>
        </div>








